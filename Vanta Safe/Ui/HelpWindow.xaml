<Window x:Class="Vanta_Safe.Ui.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vanta_Safe.Ui"
        mc:Ignorable="d"
        WindowState="Maximized"
        Title="HelpWindow" Height="450" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="G:\My CS\Semester 4\ISL\IS Final Project\Vanta Safe\Assets\venta-black.jpg" Stretch="UniformToFill"/>
    </Window.Background>
    <Grid Margin="20">
       
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            
            <StackPanel Margin="20" Orientation="Vertical">
                <!-- Back Button -->
                <Button x:Name="btnBack" 
Content="← Back" 
HorizontalAlignment="Left"
VerticalAlignment="Top"
Margin="20,20"
Style="{StaticResource MenuButtonStyle}"
Click="GoBack_Click"/>
                <!-- Animated Heading -->
                <TextBlock x:Name="Heading"
                       Text="Welcome to Vanta Safe!"
                       FontSize="32"
                       FontWeight="Bold"
                       Foreground="#00FF00"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,20">
                    <TextBlock.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                 From="0" To="1" Duration="0:0:2" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </TextBlock.Triggers>
                </TextBlock>

                <!-- Instructions -->
                <TextBlock Text="• Register Your Master Password" 
                       FontSize="20" 
                       FontWeight="SemiBold" 
                       Foreground="#00FF00"
                       Margin="0,10,0,5" />
                <TextBlock Text="At first launch, set a strong Master Password. It is used to encrypt your data." 
                       TextWrapping="Wrap" 
                       Foreground="#00FF00" 
                       Margin="0,0,0,20"/>

                <TextBlock Text="• Login Using Master Password" 
                       FontSize="20" 
                       FontWeight="SemiBold" 
                       Foreground="#00FF00"
                       Margin="0,10,0,5"/>
                <TextBlock Text="Login securely each time you access the vault. Device secret is used internally for stronger protection." 
                       TextWrapping="Wrap" 
                       Foreground="#00FF00"
                       Margin="0,0,0,20"/>

                <TextBlock Text="• Vault Operations" 
                       FontSize="20" 
                       FontWeight="SemiBold" 
                       Foreground="#00FF00"
                       Margin="0,10,0,5"/>
                <TextBlock Text="You can add, view, update, and delete your secrets. All secrets are encrypted securely." 
                       TextWrapping="Wrap"
                       Foreground="#00FF00"
                       Margin="0,0,0,20"/>

                <TextBlock Text="• Encryption and Protection" 
                       FontSize="20" 
                       FontWeight="SemiBold" 
                       Foreground="#00FF00"
                       Margin="0,10,0,5"/>
                <TextBlock Text="We use BCrypt for password hashing (with enhanced security) and AES encryption for secret data." 
                       TextWrapping="Wrap"
                       Foreground="#00FF00"
                       Margin="0,0,0,20"/>

                <TextBlock Text="• Important Note" 
                       FontSize="20" 
                       FontWeight="SemiBold" 
                       Foreground="#00FF00"
                       Margin="0,10,0,5"/>
                <TextBlock Text="If you forget your master password, recovery is NOT possible for your security." 
                       TextWrapping="Wrap" 
                       Foreground="#00FF00"
                       Margin="0,0,0,20"/>

                <!-- Placeholder for Wireframes -->
                <TextBlock Text="• Application Wireframes" 
                       FontSize="20" 
                       FontWeight="SemiBold" 
                       Foreground="#00FF00"
                       Margin="0,10,0,5"/>
                <TextBlock Text="[ Wireframes will be shown here ]" 
                       TextWrapping="Wrap" 
                       Foreground="#00FF00"
                       Margin="0,0,0,20"/>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
