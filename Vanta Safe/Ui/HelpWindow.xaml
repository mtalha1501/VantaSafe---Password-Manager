<Window x:Class="Vanta_Safe.Ui.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vanta_Safe.Ui"
        mc:Ignorable="d"
        WindowState="Maximized"
        Title="HelpWindow" Height="550" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="G:\My CS\Semester 4\ISL\IS Final Project\Vanta Safe\Assets\venta-black.jpg" Stretch="UniformToFill"/>
    </Window.Background>
    <Grid Margin="20">
       
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            
            <StackPanel Margin="20" Orientation="Vertical">
                <!-- Back Button -->
                <Button x:Name="btnBack" 
Content="← Back" 
HorizontalAlignment="Left"
VerticalAlignment="Top"
Margin="20,20"
Style="{StaticResource MenuButtonStyle}"
Click="GoBack_Click"/>
                <!-- Animated Heading -->
                <TextBlock x:Name="Heading"
                       Text="Welcome to Vanta Safe!"
                       FontSize="32"
                       FontWeight="Bold"
                       Foreground="#00FF00"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,20">
                    <TextBlock.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                 From="0" To="1" Duration="0:0:2" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </TextBlock.Triggers>
                </TextBlock>

                <!-- Introduction -->
                <TextBlock Text="• How Vanta Safe Works" 
           FontSize="20" 
           FontWeight="SemiBold" 
           Foreground="#00FF00"
           Margin="0,10,0,5"/>
                <TextBlock Text="Vanta Safe is a secure offline desktop password manager. It uses AES-256 encryption to encrypt your site passwords, usernames, and URLs. Your master password is hashed with BCrypt and never stored in plain text. All sensitive fields are decrypted only during use, making your data safe even if the database is accessed externally." 
           TextWrapping="Wrap" 
           Foreground="#00FF00" 
           Margin="0,0,0,20"/>

                <!-- How to Use -->
                <TextBlock Text="• Using Vanta Safe After Login" 
           FontSize="20" 
           FontWeight="SemiBold" 
           Foreground="#00FF00"
           Margin="0,10,0,5"/>
                <TextBlock Text="1) Once you log in, you’ll be directed to the Vault window where you can manage your saved credentials. Initially, this list may be empty if you haven’t saved anything yet." 
           TextWrapping="Wrap" 
           Foreground="#00FF00"
           Margin="0,0,0,10"/>

                <TextBlock Text="2) To add new credentials, click the Add button. This opens a form where you can enter site name, URL, username, and password. These fields are encrypted before saving to the database." 
           TextWrapping="Wrap" 
           Foreground="#00FF00"
           Margin="0,0,0,10"/>

                <TextBlock Text="3) After saving, you’ll return to the Vault window. The new entry will now appear in the list of stored credentials." 
           TextWrapping="Wrap" 
           Foreground="#00FF00"
           Margin="0,0,0,10"/>

                <TextBlock Text="4) You can double-click any password entry to view its details. You will be prompted for your Master Password again to ensure security before revealing details." 
           TextWrapping="Wrap" 
           Foreground="#00FF00"
           Margin="0,0,0,10"/>

                <TextBlock Text="5) After viewing a credential, you can choose to edit or delete it. Once done, press the Refresh button on the Vault screen to reload your password list with the updated data." 
           TextWrapping="Wrap" 
           Foreground="#00FF00"
           Margin="0,0,0,20"/>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
