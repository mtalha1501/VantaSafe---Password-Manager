<Window x:Class="Vanta_Safe.EditCredential"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vanta_Safe"
        mc:Ignorable="d"
        Title="Edit Credential" Height="450" Width="800"
        WindowState="Maximized"
        >

    <!-- Background Image (Replace with your asset) -->
    <Window.Background>
        <ImageBrush ImageSource="G:\My CS\Semester 4\ISL\IS Final Project\Vanta Safe\Assets\bg3.jpeg" Stretch="UniformToFill"/>
    </Window.Background>

    <Grid>
      

        <!-- Main Content (Centered) -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="340" Background="Black" Height="358">

            <!-- Header -->
            <TextBlock Text="Edit Credential" 
                       Foreground="#00FF00" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <!-- Title + Animated '+' Button -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="New Credential" 
                           Foreground="#00FF00" 
                           FontSize="16"
                           Margin="5"
                           VerticalAlignment="Center"/>

                <!-- Animated '+' Emoji -->
                <TextBlock Text="➕" 
                           Foreground="#00FF00" 
                           FontSize="20"
                           Margin="10,0,0,0"
                           VerticalAlignment="Center">
                    <TextBlock.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                 From="1" To="0" Duration="0:0:1.2" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </TextBlock.Triggers>
                </TextBlock>
            </StackPanel>

            <!-- Input Fields -->
            <StackPanel Margin="0,20,0,0">
                <!-- Site Name -->
                <TextBlock Text="Site/App Name" Foreground="#00FF00" Margin="5,5,0,0"/>
                <TextBox x:Name="txtSiteName" Background="Transparent" Foreground="#00FF00" 
                         BorderBrush="#00FF00" Margin="5,5,5,10"
/>

                <!-- URL -->
                <TextBlock Text="URL (Optional)" Foreground="#00FF00" Margin="5,5,0,0"/>
                <TextBox x:Name="txtSiteUrl" Background="Transparent" Foreground="#00FF00" 
                         BorderBrush="#00FF00" Margin="5,5,5,10"/>

                <!-- Username -->
                <TextBlock Text="Username" Foreground="#00FF00" Margin="5,5,0,0"/>
                <TextBox x:Name="txtUsername" Background="Transparent" Foreground="#00FF00" 
                         BorderBrush="#00FF00" Margin="5,5,5,10"/>

                <!-- Password -->
                <TextBlock Text="Password" Foreground="#00FF00" Margin="5,5,0,0"/>
                <PasswordBox x:Name="txtPassword" Background="Transparent" Foreground="#00FF00" 
                             BorderBrush="#00FF00" Margin="5,5,5,10"/>
            </StackPanel>

            <!-- Save Button -->
            <Button x:Name="btnSave" Content="Save Credential" 
                    Click="btnSave_Click"
                    Foreground="#00FF00" 
                    Background="Transparent" 
                    BorderBrush="#00FF00"
                    Width="150" Height="30"
                    HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>