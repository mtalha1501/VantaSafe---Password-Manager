<Window x:Class="Vanta_Safe.Ui.PasswordPromptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vanta_Safe.Ui"
        mc:Ignorable="d"
        KeyDown="Window_KeyDown"
        Title="PasswordPromptWindow" 
        Height="250" 
        Width="400"
        WindowStartupLocation="CenterScreen">

    <Window.Background>
        <ImageBrush ImageSource="G:\My CS\Semester 4\ISL\IS Final Project\Vanta Safe\Assets\venta-black.jpg" Stretch="UniformToFill"/>
    </Window.Background>

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Enter Master Password"
                       Foreground="#00FF00"
                       FontSize="18"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <PasswordBox x:Name="txtPassword"
                         Style="{StaticResource HintPasswordBox}"
                         Tag="Master Password"
                         Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="btnConfirm" 
                        Content="Verify"
                        Style="{StaticResource ActionButtonStyle}"
                        Click="BtnConfirm_Click"
                        Width="100"
                        Margin="0,0,10,0"/>

                <Button x:Name="btnCancel" 
                        Content="Cancel"
                        Style="{StaticResource DangerButtonStyle}"
                        Click="BtnCancel_Click"
                        Width="100"/>
            </StackPanel>

            <TextBlock x:Name="txtError"
                       Foreground="Red"
                       Margin="0,10"
                       TextWrapping="Wrap"
                       Visibility="Collapsed"/>
        </StackPanel>
    </Grid>
</Window>
